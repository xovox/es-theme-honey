<theme>
  <formatVersion>4</formatVersion>
  <include>./../pixel.xml</include>

	<view name="system">

    <image name="console_overlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>1 1</maxSize>
			<path>./wallpaper.png</path>
		</image>

		<image name="logo">
			<path>./system.png</path>
    </image>

	</view>

	<view name="basic, detailed">
	</view>

  <view name="basic">

    <image name="logo">
			<path>./system.png</path>
			<pos>0.5 0.14</pos>
			<maxSize>0.27 0.255</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0.05 0.16</pos>
			<origin>0 0</origin>
			<size>0.9 0.9</size>
			<color>555555</color>
			<path>./wallpaper.png</path>
		</image>

  </view>

	<view name="detailed">

		<image name="logo">
			<path>./system.png</path>
			<pos>0.274 0.12</pos>
			<maxSize>0.418 0.115</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<textlist name="gamelist">
			<pos>0.033 0.22</pos>
			<size>0.483 0.7</size>
      <!--
      <alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontSize>0.035</fontSize>
			<selectedColor>ffd800</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>e3e3e3</secondaryColor>
			<forceUppercase>0</forceUppercase>
      -->
		</textlist>

		<text name="md_description">
			<forceUppercase>0</forceUppercase>
			<size>0.335 0.642</size>
			<pos>0.612 0.405</pos>
			<color>ffffff</color>
			<fontSize>0.035</fontSize>
			<alignment>center</alignment>
		</text>

		<text name="md_image, md_players, md_developer, md_publisher, md_genre, md_playcount, md_lbl_players">
			<pos>1 1</pos>
		</text>

		<datetime name="md_releasedate, md_lastplayed">
			<pos>1 1</pos>
		</datetime>

		<rating name="md_rating">
			<pos>1 1</pos>
		</rating>

		<image name="md_image">
			<pos>0.78 0.22</pos>
			<maxSize>0.300 0.300</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>

</theme>
